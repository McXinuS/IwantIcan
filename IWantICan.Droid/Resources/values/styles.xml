<resources>
    <style name="AppTheme" parent="AppTheme.Base"></style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/gray</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/med_gray</item>

        <item name="windowActionBar">true</item>
        <item name="windowActionModeOverlay">true</item>

        <item name="android:windowBackground">@color/white</item>
      
        <item name="android:textCursorDrawable">@null</item>
    </style>

  <style name="AppTheme.Splash" parent="AppTheme.Base"></style>
  
  <style name="AppTheme.Main" parent="AppTheme.Base"></style>
  
  <style name="AppTheme.OfferCreate" parent="AppTheme.Base"></style>
  
  <style name="AppTheme.OfferEdit" parent="AppTheme.Base"></style>
  
  <style name="AppTheme.OfferDetails" parent="AppTheme.Base">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
  </style>
  
  <style name="AppTheme.ProfileMy" parent="AppTheme.Base"></style>
  
  <style name="AppTheme.Login" parent="AppTheme.Base"></style>


  <!-- ELEMENTS -->
  
  <style name="EditTextTheme">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textColor">@color/gray</item>
    <item name="android:singleLine">true</item>
    <item name="android:textSize">@dimen/text_large</item>
    <item name="android:paddingBottom">@dimen/element_padding_medium</item>
    <item name="android:layout_marginTop">@dimen/element_margin_medium</item>
  </style>

  <style name="ButtonPrimary">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">@dimen/button_login_height</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:background">@color/colorPrimary</item>
  </style>
  
  <style name="ButtonPrimaryRoundCorners" parent="ButtonPrimary">
    <item name="android:background">@drawable/rounded_corners_button</item>
  </style>

  <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
    <item name="colorAccent">@color/colorPrimary</item>
    <item name="android:textColorPrimary">@color/black</item>
    <item name="android:background">@color/white</item>
  </style>
  
  <style name="ToolBarTransparent" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
    <item name="android:windowActionBarOverlay">true</item>
    <!-- Support library compatibility -->
    <item name="windowActionBarOverlay">true</item>
  </style>
</resources>